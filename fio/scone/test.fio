
[global]
ioengine=posixaio
direct=1
size=64g
group_reporting
thread
filename=/fio-volume/fio-test-file

[sequential-fill]
description=Sequential fill phase
rw=write
iodepth=16
bs=1M

[seq-read-1]
rw=read
bs=1M
stonewall

[seq-read-2]
rw=read
bs=1M
iodepth=2
stonewall

[random-write-16]
stonewall
description=Random write steady state phase
rw=randwrite
bs=4K
iodepth=16
runtime=3

[random-write-16x8]
stonewall
description=Random write steady state phase
rw=randwrite
bs=4K
iodepth=16
numjobs=1
runtime=3

[random-read-16]
stonewall
description=Random read steady state phase
rw=randread
bs=4K
iodepth=16
runtime=3

[random-read-16x8]
stonewall
description=Random read steady state phase
rw=randread
bs=4K
iodepth=16
numjobs=1
runtime=3

[mixed-random-rw-32x8]
stonewall
rw=randrw
rwmixread=70
bs=4K
iodepth=32
numjobs=1
runtime=3